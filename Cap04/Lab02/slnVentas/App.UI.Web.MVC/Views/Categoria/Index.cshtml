@model IEnumerable<App.Entities.Base.Categoria>

@{
    ViewBag.Title = "Lista de Categorías";
}

<h2>Lista de Categorías</h2>

@*Sin usar HTML Helper*@
@*<a href="/Categoria/Create" class="btn btn-success">Nueva Categoría</a>*@
@*Usando HTML helper*@
@Html.ActionLink("Nueva categoría", "Create", "Categoria", new {@class = "btn btn-success" })
<br /><br />
<table class="table table-striped">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>#</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CategoriaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>

