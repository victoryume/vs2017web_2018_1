@model App.Entities.Base.Marca

@{
    ViewBag.Title = "Create";
    string title = Model == null ? "Crear Marca" : "Editar Marca";

}

<h2>@title</h2>

@using (Ajax.BeginForm("Create", "Marca",
    new AjaxOptions() { OnSuccess = "app.MarcaView.RefreshLista()" }))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.MarcaID)

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
            <div class="col-sm-10">

                @Html.EditorFor(
                    model => model.Nombre,
                    new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Descripción</label>
            <div class="col-sm-10">
                @Html.EditorFor(
                    model => model.Descripcion,
                    new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Descripcion)

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>

}